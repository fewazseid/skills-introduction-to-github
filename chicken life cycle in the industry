<script>
document.addEventListener('DOMContentLoaded', function () {

    const chartTooltipConfig = {
        plugins: {
            tooltip: {
                callbacks: {
                    title: function(tooltipItems) {
                        const item = tooltipItems[0];
                        let label = item.chart.data.labels[item.dataIndex];
                        if (Array.isArray(label)) {
                            return label.join(' ');
                        } else {
                            return label;
                        }
                    }
                }
            }
        }
    };

    function wrapLabels(label) {
        const maxLen = 16;
        if (label.length <= maxLen) {
            return label;
        }
        const words = label.split(' ');
        let currentLine = '';
        const lines = [];
        for (const word of words) {
            if ((currentLine + ' ' + word).length > maxLen) {
                lines.push(currentLine.trim());
                currentLine = word;
            } else {
                currentLine += ' ' + word;
            }
        }
        lines.push(currentLine.trim());
        return lines.map(l => l.trim()).filter(l => l.length > 0);
    }

    const brandColors = {
        deepBlue: '#0A2B4C',
        brightBlue: '#04A5C4',
        orange: '#F5A42E',
        lightGray: '#F4F4F4',
        darkGray: '#333333'
    };
    
    new Chart(document.getElementById('starterFeedChart'), {
        type: 'doughnut',
        data: {
            labels: ['Protein (21%)', 'Other Nutrients'],
            datasets: [{
                label: 'Starter Feed Composition',
                data: [21, 79],
                backgroundColor: [brandColors.brightBlue, brandColors.lightGray],
                borderColor: [brandColors.brightBlue, brandColors.lightGray],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: chartTooltipConfig.plugins
        }
    });

    new Chart(document.getElementById('growerFeedChart'), {
        type: 'doughnut',
        data: {
            labels: ['Protein (17%)', 'Other Nutrients'],
            datasets: [{
                label: 'Grower Feed Composition',
                data: [17, 83],
                backgroundColor: [brandColors.orange, brandColors.lightGray],
                borderColor: [brandColors.orange, brandColors.lightGray],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: chartTooltipConfig.plugins
        }
    });

    new Chart(document.getElementById('layerFeedChart'), {
        type: 'doughnut',
        data: {
            labels: ['Protein (17%)', 'Calcium (3.5%)', 'Other Nutrients'],
            datasets: [{
                label: 'Layer Feed Composition',
                data: [17, 3.5, 79.5],
                backgroundColor: [brandColors.brightBlue, brandColors.orange, brandColors.lightGray],
                borderColor: [brandColors.brightBlue, brandColors.orange, brandColors.lightGray],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: chartTooltipConfig.plugins
        }
    });
    
    const rawLabels = ['Conventional Cage', 'Cage-Free', 'Free-Range'];
    const processedLabels = rawLabels.map(wrapLabels);

    new Chart(document.getElementById('housingSpaceChart'), {
        type: 'bar',
        data: {
            labels: processedLabels,
            datasets: [
                {
                    label: 'Layers (sq. ft./bird)',
                    data: [0.7, 2.0, 4.5], 
                    backgroundColor: brandColors.brightBlue,
                    borderColor: brandColors.brightBlue,
                    borderWidth: 1
                },
                {
                    label: 'Broilers (sq. ft./bird)',
                    data: [1.0, null, 2.5],
                    backgroundColor: brandColors.orange,
                    borderColor: brandColors.orange,
                    borderWidth: 1
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Square Feet per Bird'
                    }
                }
            },
            plugins: chartTooltipConfig.plugins
        }
    });
});
</script>
